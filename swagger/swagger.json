                    "example": "homicide; missing persons, etc."
                  },
                  "victim-picture": {
                    "example": "any"
                  },
                  "victim-name": {
                    "example": "any"
                  },
                  "victim-age": {
                    "example": "any"
                  },
                  "date-body-found": {
                    "example": "any"
                  },
                  "location": {
                    "example": "any"
                  },
                  "status": {
                    "example": "unsolved"
                  },
                  "website-url": {
                    "example": "https://dnadoeproject.org/case/rock-co-john-doe-1981/"
                  },
                  "contact-url": {
                    "example": "any"
                  }
                }
              }
            }
          ],
          "responses": {
            "200": {
              "description": "OK"
            },
            "400": {
              "description": "Bad Request"
            },
            "404": {
              "description": "Not Found"
            },
            "500": {
              "description": "Internal Server Error"
            }
